<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background_img1"
            android:scaleType="centerCrop"
            android:fitsSystemWindows="true"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_background">

        </FrameLayout>
    </FrameLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button6"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@android:drawable/ic_dialog_email"
            android:paddingTop="10dp"
            android:textColor="#fff"
            app:layout_constraintLeft_toRightOf="@+id/button5"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/button9" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="54dp"
            android:layout_height="18dp"
            android:gravity="center_horizontal"
            android:text="@string/mi_perfil"
            android:textColor="@color/white"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/button6"
            app:layout_constraintLeft_toRightOf="@+id/textView6"
            android:layout_marginLeft="64dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@android:drawable/ic_dialog_email"
            android:paddingTop="10dp"
            android:textColor="#fff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/button8" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="54dp"
            android:layout_height="18dp"
            android:gravity="center_horizontal"
            android:text="@string/mi_perfil"
            android:textColor="@color/white"
            app:layout_constraintRight_toLeftOf="@+id/textView15"
            android:layout_marginRight="64dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/button7" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="54dp"
            android:layout_height="18dp"
            android:gravity="center_horizontal"
            android:text="@string/mi_perfil"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/button8" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="54dp"
            android:layout_height="18dp"
            android:gravity="center_horizontal"
            android:text="@string/mi_perfil"
            android:textColor="@color/white"
            app:layout_constraintLeft_toRightOf="@+id/textView15"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/button9" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="54dp"
            android:layout_height="18dp"
            android:gravity="center_horizontal"
            android:text="@string/mi_perfil"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/button5" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="47dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <Button
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@android:drawable/ic_dialog_email"
            android:paddingTop="10dp"
            android:textColor="#fff"
            android:id="@+id/button2"
            app:layout_constraintRight_toLeftOf="@+id/button5"
            android:layout_marginRight="64dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/button7" />

        <Button
            android:id="@+id/button7"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@android:drawable/ic_dialog_email"
            android:paddingTop="10dp"
            android:textColor="#fff"
            app:layout_constraintTop_toBottomOf="@+id/imageView9"
            app:layout_constraintRight_toLeftOf="@+id/button8"
            android:layout_marginRight="64dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@android:drawable/ic_dialog_email"
            android:paddingTop="10dp"
            android:textColor="#fff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" />

        <Button
            android:id="@+id/button9"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@android:drawable/ic_dialog_email"
            android:paddingTop="10dp"
            android:textColor="#fff"
            app:layout_constraintLeft_toRightOf="@+id/button8"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" />

        <TextView
            android:id="@+id/tv_perfil"
            android:layout_width="54dp"
            android:layout_height="18dp"
            android:gravity="center_horizontal"
            android:text="@string/mi_perfil"
            android:textColor="@color/white"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            app:layout_constraintRight_toLeftOf="@+id/textView6"
            android:layout_marginRight="64dp" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>