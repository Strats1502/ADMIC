<?xml version="1.0" encoding="utf-8"?>
<!--Todo dentro de un Scroll-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <!--Layout principal-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Título fragment-->
        <TextView
            android:id="@+id/tv_titulo_conocenos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/conocenos_titulo"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="10dp"/>

        <!--Sección que hacemos-->
        <TextView
            android:id="@+id/tv_que_hacemos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/conocenos_que_hacemos"
            android:textSize="15dp"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic"/>

        <!--Linea separación-->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="3dp"
            android:background="@color/colorAccent"/>

        <!--Descripción-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            style="@style/AppTheme.CardViewStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/conocenos_titulo_descripcion"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/conocenos_descripcion"
                    android:layout_margin="10dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--Misión-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            style="@style/AppTheme.CardViewStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/conocenos_titulo_mision"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="@string/conocenos_mision" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--Visión-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            style="@style/AppTheme.CardViewStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/conocenos_titulo_vision"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/conocenos_vision"
                    android:padding="10dp"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--Valores-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            style="@style/AppTheme.CardViewStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/conocenos_titulo_valores"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/conocenos_valores"
                    android:padding="10dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!--Sección logros y estadisticas-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/conocenos_titulo_logros_estadisticas"
            android:textSize="15dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic"
            android:layout_margin="10dp"/>

        <!--Linea separación-->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="3dp"
            android:background="@color/colorAccent"/>

        <!--Logros y estadisticas-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            style="@style/AppTheme.CardViewStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/conocenos_titulo_logros_estadisticas"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/conocenos_logros_estadisticas"
                    android:padding="10dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--Sección enlaces-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/conocenos_enlaces"
            android:textSize="15dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic"
            android:layout_margin="10dp"/>

        <!--Linea separación-->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="3dp"
            android:background="@color/colorAccent"/>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_lineas_accion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:foreground="?attr/selectableItemBackground"
            style="@style/AppTheme.CardViewStyle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/conocenos_lineas_de_accion"
                android:textAlignment="center"
                android:padding="10dp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_diagnostico_juvenil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:foreground="?attr/selectableItemBackground"
            style="@style/AppTheme.CardViewStyle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/conocenos_diagnostico_juvenil"
                android:textAlignment="center"
                android:padding="10dp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_encuesta_juventud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:foreground="?attr/selectableItemBackground"
            style="@style/AppTheme.CardViewStyle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/conocenos_encuesta_juventud"
                android:textAlignment="center"
                android:padding="10dp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_directorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:foreground="?attr/selectableItemBackground"
            style="@style/AppTheme.CardViewStyle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/conocenos_directorio"
                android:textAlignment="center"
                android:padding="10dp"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>