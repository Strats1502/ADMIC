<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            android:src="@drawable/background_img1" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:alpha="0.5">

        </FrameLayout>
    </FrameLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="170dp"
            android:src="@drawable/logo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="72dp"
            android:id="@+id/imageView10"
            android:layout_height="170dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" />




            <EditText
                android:id="@+id/email_et"
                android:layout_width="344dp"
                android:layout_height="42dp"
                android:hint="Email"
                android:maxLength="50"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textIsSelectable="false"
                android:textSize="18dp"
                android:typeface="normal"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView10"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp" />


            <EditText
                android:id="@+id/pass_et"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:hint="@string/pass"
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimaryDark"
                android:textSize="18dp"
                android:typeface="normal"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/email_et"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp" />


            <Button
                android:id="@+id/btn_iniciar_sesion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bordered_button_blue"
                android:text="Iniciar sesiÃ³n"
                android:textColor="@color/white"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/pass_et"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp" />

            <TextView
                android:id="@+id/tv_recuperar_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/olvidaste"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_iniciar_sesion"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />




                <Button
                    android:id="@+id/googlebtn"
                    style="@style/ButtonNoPadding"
                    android:layout_height="42dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/bordered_button"
                    android:drawableLeft="@drawable/google_logo"
                    android:drawablePadding="25dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/login_google"
                    android:textColor="@color/google"
                    android:textSize="14sp"
                    app:layout_constraintRight_toRightOf="@+id/btn_iniciar_sesion"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="56dp"
                    app:layout_constraintTop_toBottomOf="@+id/btn_iniciar_sesion"
                    android:layout_marginRight="16dp"
                    android:layout_width="150dp" />

        <Button
            android:id="@+id/btn_facebook"
            style="@style/ButtonNoPadding"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/bordered_button"
            android:drawableLeft="@drawable/google_logo"
            android:drawablePadding="25dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/facebook"
            android:textColor="@color/facebook"
            android:textSize="14sp"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_iniciar_sesion"
            app:layout_constraintLeft_toLeftOf="@+id/btn_iniciar_sesion"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintRight_toLeftOf="@+id/googlebtn"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="150dp" />


        </android.support.constraint.ConstraintLayout>
    </FrameLayout>
