<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/mapa_region"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.57"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/tv_nombre_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la región"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorMagenta"
            android:padding="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/mdtp_light_gray"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/tv_direccion_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección de la región"
            android:padding="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/mdtp_light_gray"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/tv_responsable_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Responsable de la región"
            android:padding="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/mdtp_light_gray"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/tv_descripcion_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción de la región"
            android:padding="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/mdtp_light_gray"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

</LinearLayout>